{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/master/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": ["deno.worker"],
    "strict": true
  },
  "tasks": {
    // "benchmark": "deno bench -A benchmarks/internal/bench.mjs",
    // "benchmark:json": "deno bench -A --json benchmarks/internal/bench.mjs",
    "benchmark:js": "deno run -A --v8-flags=--max-old-space-size=4096 benchmarks/internal/bench.mjs",
    "benchmark:js:debug": "deno run -A --inspect --v8-flags=--max-old-space-size=4096 benchmarks/internal/bench.mjs",
    "test": "deno test -A --parallel",
    "test:coverage": "deno test -A --parallel --coverage=coverage",
    "test:debug": "deno test -A --inspect",
    "coverage": "deno coverage coverage",
    "coverage:report": "deno coverage --lcov --output=coverage/lcov.info coverage",
    "format": "deno fmt",
    "format:check": "deno fmt --check",
    "lint": "deno lint",
    "documentation": "deno doc src/mod.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "lock": false
}
