{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/master/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "strict": true
  },
  "tasks": {
    "benchmark": "",
    "benchmark:debug": "",
    "test": "deno test -A --parallel --coverage=coverage",
    "test:debug": "deno test -A --inspect",
    "coverage": "deno coverage --lcov --output=coverage/lcov.info coverage",
    "format": "deno fmt",
    "lint": "deno lint",
    "documentation": "deno doc"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  }
}
